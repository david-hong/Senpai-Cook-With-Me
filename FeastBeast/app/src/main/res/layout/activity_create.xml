<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/buttons"
        android:layout_height="wrap_content">
        <Button
            android:text="New Recipe"
            android:id="@+id/newRecip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2eaac0"/>
        <Button
            android:text="Create"
            android:id="@+id/create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2eaac0"/>
        <Button
            android:text="Bookmarks"
            android:id="@+id/bookmarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2eaac0"/>
    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Title"
        android:layout_below="@id/buttons"
        android:id="@+id/getTitle"
        android:textColor="#000000"
        android:textSize="26dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/buttons2"
        android:layout_height="wrap_content"
        android:layout_below="@id/getTitle">
        <Button
            android:text="Recipe"
            android:id="@+id/recipeBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:background="#44b9cb"/>
        <Button
            android:text="Ingredients"
            android:id="@+id/ingredientsBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:background="#2eaac0"/>
    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons2"
        android:id="@+id/getRecipe"
        android:textColor="#333333"
        android:hint="Enter recipe, enter for new line" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons2"
        android:id="@+id/getIngredients"
        android:textColor="#333333"
        android:hint="Enter ingredients, enter for new line"
        android:visibility="invisible"/>

</RelativeLayout>