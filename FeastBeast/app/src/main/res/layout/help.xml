<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/buttons"
        android:layout_height="wrap_content">
        <Button
            android:text="New Recipe"
            android:id="@+id/newRecip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2eaac0"/>
        <Button
            android:text="Create"
            android:id="@+id/create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2eaac0"/>
        <Button
            android:text="Bookmarks"
            android:id="@+id/bookmarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2eaac0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:text="Recipe Websites Supported:"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <TextView
            android:text="http://www.foodnetwork.ca/"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#a7a7a7"/>
        <TextView
            android:text="http://allrecipes.com/"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#a7a7a7"/>
        <TextView
            android:text="http://www.food.com/"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#a7a7a7"/>
        <TextView
            android:text="Speech Commands"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:text="'Next Step' - Gets the next recipe direction \n'Repeat Step' -  Repeats the current recipe direction\n'Previous Step' - Gets the previous recipe direction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#a7a7a7"/>
        <TextView
            android:text="Myo Commands"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:text="'Wave Out' - Gets the next recipe direction \n'Spread Fingers' -  Repeats the current recipe direction\n'Wave In' - Gets the previous recipe direction\n'Fist and then turn left/right' - Adjusts the volume"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#a7a7a7"/>
    </LinearLayout>
</LinearLayout>